<launch>
  <!-- 센서 퍼블리셔 노드들 -->
  <node pkg="mobile_controller" exec="roscar_battery_publisher" name="battery_node" output="screen"/>
  <node pkg="mobile_controller" exec="roscar_imu_publisher" name="imu_node" output="screen"/>
  <node pkg="mobile_controller" exec="roscar_lidar_publisher" name="lidar_node" output="screen"/>
  <node pkg="mobile_controller" exec="roscar_register_publisher" name="register_node" output="screen"/>
  <node pkg="mobile_controller" exec="roscar_ultra_publisher" name="ultra_node" output="screen"/>

  <!-- domain_bridge 실행 (상대 경로로 지정) -->
  <include file="$(find-pkg-share domain_bridge)/launch/domain_bridge.launch.xml">
    <arg name="config" value="roscars/mobile_controller/roscars_config/domain_bridge/pinky_07db_36_to_14.yaml"/>
  </include>
</launch>
